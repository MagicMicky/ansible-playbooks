# Catppuccin Mocha Shell Theme Configuration
# Generated by Ansible - Do not edit manually
# This file exports theme-related environment variables for various shell tools

# ==============================================================================
# LS_COLORS - File listing colors (from vivid catppuccin-mocha)
# ==============================================================================
export LS_COLORS="{{ lookup('file', '../files/ls_colors_catppuccin_mocha') }}"

# ==============================================================================
# bat - Syntax highlighting theme
# ==============================================================================
export BAT_THEME="{{ bat_theme_name }}"

# ==============================================================================
# fzf - Fuzzy finder color scheme
# ==============================================================================
export FZF_DEFAULT_OPTS="{{ fzf_colors | replace('\n', ' ') }}"

# ==============================================================================
# eza - Modern ls replacement
# ==============================================================================
# eza respects LS_COLORS by default, but we can add custom settings
export EZA_COLORS="{{ eza_colors }}"

# Optional: Set default eza options for consistent experience
# These can be overridden in profile-specific configs
export EZA_ICON_SPACING=2

# ==============================================================================
# zsh completion colors
# ==============================================================================
# Use LS_COLORS for completion menu
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}

# ==============================================================================
# Machine type information (for debugging/scripts)
# ==============================================================================
export SHELL_THEME="catppuccin-mocha"
export MACHINE_PROFILE="{{ machine_profile }}"
