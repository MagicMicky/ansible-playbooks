# Vanilla Starship Configuration (Stage 2)
# Generated by Ansible for {{ machine_profile }} profile
# Simple directory + character prompt (no theming yet)

format = "$directory$character"

[directory]
style = "cyan bold"
truncation_length = 0  # Show full path
truncate_to_repo = false
format = "[$path]($style) "

[character]
success_symbol = "[❯](green)"
error_symbol = "[❯](red)"
